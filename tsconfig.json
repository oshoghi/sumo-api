{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowJs": true,
        "target": "es5",
        "typeRoots": [ "node_modules/@types" ],
        "sourceMap": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src/**/*"]
}
